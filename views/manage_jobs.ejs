<%- messages() %>
<div class="container">
<h2>Manage Jobs</h2>
<p>Click on "Approve" to approve jobs.</p>
<p>Click on "Disapprove" to disapprove jobs.</p>
<p>Click on "Details" to show more details.</p>
<p>----------------------------------------------------------------</p>
<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#to_be_approved">To Be Approved</a></li>
  <li><a data-toggle="tab" href="#approved">Approved</a></li>
  <li><a data-toggle="tab" href="#ask_for_revision">Ask for revision</a></li>
</ul>
<div class="tab-content">
    <div id="to_be_approved" class="tab-pane fade in active">
    <%=results1.length%>
    <div class="panel panel-default">
      <table class="table table-striped table-bordered"  border="1px" cellspacing="0">
        <thead>
          <tr>
            <th class="col-xs-1">No.</th>
            <th class="col-md-1">Employment Type</th>
            <th class="col-md-3">Name</th>
            <th class="col-md-2">Deadline</th>
            <th class="col-md-2">Location</th>
            <th class="col-md-3">Operations</th>
          </tr>
        </thead>
        <tbody>
          <% var index = 1; results1.forEach(function(rs) {%>
          <tr>
            <td class="col-xs-1"><%=index%></td>
            <td id="id_<%=index%>" class="hidID"><%=rs._id%></td>
            <td class="col-md-1"><%=rs.employmentType%></td>
            <td class="col-md-3"><%=rs.name%></td>
            <td class="col-md-2"><%=rs.deadline%></td>
            <td class="col-md-2"><%=rs.city%>,<%=rs.state%>,<%=rs.country%></td>
            <td class="col-md-3">
              <a href="/manage/jobs/details?id=<%=rs._id%>"><button class="btn btn-info">Details</button></a>
              <a id="approve_<%=index%>"><button class="btn btn-success" onclick="approveJob(<%=index%>)">Approve</button></a>
              <a id="disapprove_<%=index%>"><button class="btn btn-danger" onclick="disapproveJob(<%=index%>)">Disapprove</button></a>
            </td>
          </tr>
          <% index++;}) %>
        </tbody>
      </table>
    </div>
    <ul class="pagination">
        <li><a href="?tab=1&&currentPage1=1">&laquo;</a></li>
        <% if(totalPage1 == 0){ %>
          <li class="active"><a href="?tab=1&&currentPage1=1">1</a></li>
        <% } %>
        <% for(var j = 1; j <= totalPage1; j ++){ %>
          <% if(j == currentPage1){  %>
              <li class="active">
          <%  }
            else{ %>
              <li>
          <%  } %>
              <a href="?tab=1&&currentPage1=<%=j%>"><%=j%></a></li>     
        <% } %>
        <li><a href="?tab=1&&currentPage=<%=totalPage1%>">&raquo;</a></li> 
    </ul>
    </div>
    
