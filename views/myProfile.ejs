<div class="container">
  <h2>My Profile</h2>
  <div class="container" role="main">
    <div class="well">
      <li><strong>ID:</strong> <%=results._id%></li>      
      <li><strong>Name:</strong> <%=results.name%></li>
      <li><strong>Email:</strong> <%=results.email%></li>
      <a href="/users/editProfile?id=<%=results._id%>"><button type="button" class="btn btn-warning" >Edit</button></a>
      <a href="/users/editPassword?id=<%=results._id%>"><button type="button" class="btn btn-danger">Change Password</button></a>
    </div>
  </div>
  <br>
</div>



<script>
  $('.adv-toggle-buttons a').each(function() { 
        $(this).on('click', function(){
            $(this).parent().next().slideToggle();
            $(this).parent().find('a').each(function(){
                $(this).toggle();
                
            });
        });   
    });
</script>        
