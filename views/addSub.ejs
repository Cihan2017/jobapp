<div class="container">
      <form method="post" action="/users/addSub" class="form-signin">
        <h2 class="form-signin-heading">Add Subscribe</h2>
        <label>Job Name</label>
        <input type="text" name="name" class="form-control" value="<%= (!!locals.name)?name:'' %>">
        <br>
        <lable>Position Type</lable><br>
        <select class="form-control" name="positionType" value="<%= (!!locals.positionType)?positionType:'' %>">
            <option value="">-----ALL-----</option>
            <% positionTypes.forEach(function(onePositionType) { %>
                <option value="<%=onePositionType.positionType%>"><%=onePositionType.positionType%></option>                
            <% }) %>
        </select>
        <br>
        <lable>Employment Type</lable><br>
        <select class="form-control" name="employmentType" value="<%= (!!locals.employmentType)?employmentType:'' %>">
            <option value="">-----ALL-----</option>
            <% employmentTypes.forEach(function(oneEmploymentType) { %>
                <option value="<%=oneEmploymentType.employmentType%>"><%=oneEmploymentType.employmentType%></option>                
            <% }) %>
        </select>
        <br>
        <lable>Field</lable><br>
        <select class="form-control" name="field" value="<%= (!!locals.field)?field:'' %>">
            <option value="">-----ALL-----</option>
            <% fields.forEach(function(oneField) { %>
                <option value="<%=oneField.field%>"><%=oneField.field%></option>                
            <% }) %>
        </select>
        <br>
        <lable>Region</lable><br>
        <select class="form-control" onchange="set_country(this,country,state, true)" name="region">
            <option value="" selected="selected">-----ALL-----</option>
            <script type="text/javascript">
                setRegions(this);
            </script>
        </select>
        <br>
        <br>
        <lable>Country</lable><br>
        <select class="form-control" name="country" disabled="disabled" onchange="set_city_state(this,state, true)">
            <option value="" selected="selected">-----ALL-----</option>
        </select>
        <br>
        <br>
        <lable>State/Province</lable><br>
        <select class="form-control" name="state" disabled="disabled" onchange="print_city_state(country,this)">
            <option value="" selected="selected">-----ALL-----</option>
        </select>
        <br>
        <br>
        <label>City</label>
        <input type="text" name="city" class="form-control" value="<%= (!!locals.city)?city:'' %>">
        <br>
        <label>Institution</label>
        <input type="text" name="institution" class="form-control" value="<%= (!!locals.institution)?institution:'' %>">
        <br>
        <label>Deadline</label>
        <input type="date" name="deadline" class="form-control" value="<%= (!!locals.deadline)?deadline:'' %>">
        <br>
        <label>Salary</label>
        <input type="text" name="salary" class="form-control" value="<%= (!!locals.salary)?salary:'' %>">
        <br>
        <label>Keywords</label>
        <input type="text" name="keywords" class="form-control" value="<%= (!!locals.keywords)?keywords:'' %>">
        <p>Please use "," to separate keywords without space</p>
        <br> 



        <!-- <p>Have Account? <a href="/users/login">Login</a></p> -->
        <button class="btn btn-lg btn-primary btn-block" type="submit">Subscribe</button>
      </form>

    </div> <!-- /container -->


